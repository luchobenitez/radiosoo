<div class="container">
  <div class="resume">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-offset-1 col-md-10 col-lg-offset-2 col-lg-8">
        <div class="panel panel-default">
          <div class="panel-heading resume-heading">
            <div class="row">
              <div class="col-lg-12">
                <div class="col-xs-12 col-sm-8">
                  <% if(!user.registeredAt) { %>
                    <input type="hidden" id="registeredAt" name="user[registeredAt]" value="<%= new Date(); %>">
                  <% } %>
                  <div class="form-group">
                      <label for="nick" class="control-label">Nick</label>
                      <input type="text" class="form-control" id="nick" name="user[nick]" value="<%=user.nick%>" required="true" title="Ingrese nick" placeholder="<nick>">
                      <span class="help-block"></span>
                  </div>
                  <div class="form-group">
                      <label for="username" class="control-label">Username</label>
                      <input type="text" class="form-control" id="username" name="user[username]" value="<%=user.username%>" required="true" title="Ingrese el username" placeholder="<username>">
                      <span class="help-block"></span>
                  </div>
                  <div class="form-group">
                      <label for="password" class="control-label">Password</label>
                      <input type="password" class="form-control" id="Password" name="user[password]" value="<%=user.password%>" required="true" title="Ingrese el password" placeholder="<password>">
                      <span class="help-block"></span>
                  </div>
                  <div class="form-group">
                      <label for="name" class="control-label">Nombre</label>
                      <input type="text" class="form-control" id="name" name="user[name]" value="<%=user.name%>" required="true" title="Ingrese nombre" placeholder="<nombre>">
                      <span class="help-block"></span>
                  </div>
                  <div class="form-group">
                      <label for="genre" class="control-label">Genero</label>
                      <input type="text" class="form-control" id="genre" name="user[genre]" value="<%=user.genre%>" required="true" title="Ingrese genero" placeholder="<genero>">
                      <span class="help-block"></span>
                  </div>
                  <div class="form-group">
                      <label for="email" class="control-label">Correo Electrónico</label>
                      <input type="text" class="form-control" id="email" name="user[email]" value="<%=user.email%>" required="true" title="Ingrese correo electrónico" placeholder="<email>">
                      <span class="help-block"></span>
                  </div>
                  <div class="form-group">
                      <label for="dateOfBirth" class="control-label">Fecha de Nacimiento</label>
                      <input type="text" class="form-control" id="dateOfBirth" name="user[dateOfBirth]" value="<%=user.dateOfBirth%>" required="true" title="Ingrese fecha de nacimiento" placeholder="<fecha de nacimiento>">
                      <span class="help-block"></span>
                  </div>
                  <button type="submit" name="commit" value="Form" class="btn btn-success btn-block">Crear Usuario</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
