<div class="container">
  <div class="resume">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-offset-1 col-md-10 col-lg-offset-2 col-lg-8">
        <div class="panel panel-default">
          <div class="panel-heading resume-heading">
            <div class="row">
              <div class="col-lg-12">
                <div class="col-xs-12 col-sm-8">
                  <div class="form-group">
                    <form id="topicCreateForm" method="post" action="/topics" enctype="multipart/form-data">
                      <% include _form.ejs %>
                      <input type="submit" value="submit" />
                      <button type="submit" name="commit" value="submit" class="btn btn-success btn-block">
                        Crear Topic
                      </button>
                    </form>
                    <form id="topicUpdateForm" method="post" action="/topics/<%= topic.id %>" enctype="multipart/form-data">
                      <input type="hidden" name="_method" value="put">
                      <button type="submit" name="commit" value="Form" class="btn btn-success btn-block">
                        Editar Topic
                      </button>
                    </form>
                    <form id="topicDeleteForm" method="post" action="/topics/<%= topic.id %>" enctype="multipart/form-data">
                      <input type="hidden" name="_method" value="delete">
                      <button type="submit" name="borrar" value="Form" class="btn btn-success btn-block" onClick="return confirm('Borrar Topic: <%= topic.titulo %>');">
                        Borrar Topic
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</form>
