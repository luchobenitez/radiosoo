<div class="container">
	<div class="row">
    <div class="col-md-12">
      <h4>Foros</h4>
      <div class="table-responsive">
        <table id="topicTable" class="table table-bordred table-striped">
          <thead>
            <tr>
              <th><input type="checkbox" id="checkall" /></th>
              <th class="cell-stat text-center hidden-sm">Id</th>
              <th class="cell-stat text-center hidden-sm">Titulo</th>
              <th class="cell-stat text-center hidden-xs hidden-sm">Texto</th>
              <th class="cell-stat text-center hidden-xs hidden-sm">User</th>
              <th>Edit</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody>
            <% var i; for (i=0; i < topics.length; i++) { %>
              <tr>
                <td><input type="checkbox" class="checkthis" /></td>
                <!--td><a href="#topicEditModal" data-toggle="modal" id="<%= topics[i].id %>" data-target="#topicEditModal" data-id="id"><%= topics[i].id %></a></td-->
								<td><a href="/topics/<%= topics[i].id %>/edit" ><%= topics[i].id %></a></td>
                <td><a href="/topics/<%= topics[i].id %>/comments/details" data-id="titulo"><%= topics[i].titulo %></a></td>
                <td class="text-center hidden-xs hidden-sm"><%= topics[i].texto %></td>
                <td class="text-center hidden-xs hidden-sm">by <a href="#"><%= topics[i] %></a><br><small>
                <td><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#topicEditModal" ><span class="glyphicon glyphicon-pencil"></span></button></p></td>
                <td><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#topicDeleteModal" ><span class="glyphicon glyphicon-trash"></span></button></p></td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
