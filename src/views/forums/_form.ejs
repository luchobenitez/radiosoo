<% if(!forum.registeredAt) { %>
  <input type="hidden" id="registeredAt" name="forum[registeredAt]" value="<%= new Date(); %>">
<% } %>
<div class="form-group">
    <label for="name" class="control-label">Nombre</label>
    <input type="text" class="form-control" id="name" name="forum[name]" value="<%=forum.name%>" required="true" title="Ingrese nombre del Foro" placeholder="<nombre del foro>">
    <span class="help-block"></span>
</div>
<div class="form-group">
    <label for="status" class="control-label">Estado</label>
    <input type="text" class="form-control" id="status" name="forum[status]" value="<%=forum.status%>" required="true" title="Ingrese el Estado del Foro">
    <span class="help-block"></span>
</div>
<div class="form-group">
    <label for="category" class="control-label">Categoria</label>
    <input type="text" class="form-control" id="category" name="forum[category]" value="<%=forum.category%>" required="true" title="Ingrese categoria del Foro">
    <span class="help-block"></span>
</div>
