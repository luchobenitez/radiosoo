<div class="container">
  <div class="resume">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-offset-1 col-md-10 col-lg-offset-2 col-lg-8">
        <div class="panel panel-default">
          <div class="panel-heading resume-heading">
            <div class="row">
              <div class="col-lg-12">
                <div class="col-xs-12 col-sm-8">
                  <div class="form-group">
                    <form id="forumCreateForm" method="post" action="/topics/:topicId(\\d+)/comments/create" >
                      <% include _form.ejs %>
                      <button type="submit" name="commit" value="Form" class="btn btn-success btn-block">Crear Comentario</button>
                    </form>
                    <form id="forumUpdateForm" method="post" action="/topics/:topicId(\\d+)/comments/:commentId(\\d+)" >
                      <input type="hidden" name="_method" value="put">
                      <button type="submit" name="commit" value="Form" class="btn btn-success btn-block">Editar Comentario</button>
                    </form>
                    <form id="forumDeleteForm" method="post" action="/topics/:topicId(\\d+)/comments/:commentId(\\d+)">
                      <input type="hidden" name="_method" value="delete">
                      <button type="submit" name="borrar" value="Form" class="btn btn-success btn-block" onClick="return confirm('Borrar comentario?');">
                        Borrar Foro
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
